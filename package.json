{
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "node-sass-chokidar": "^1.3.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "npm-run-all -p server client",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build-css": "node-sass-chokidar --include-path ./src/stylesheets --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src/stylesheets --include-path ./node_modules src/ -o src/ --watch --recursive",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "dotenv": "^5.0.1",
    "nodemon": "^1.17.4",
    "npm-run-all": "^4.1.3",
    "request": "^2.85.0"
  },
  "proxy": {
    "/api/*":  {
      "target": "http://127.0.0.1:3001",
      "secure": false
    }
  }
}
